<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2"
        android:gravity="center_vertical|center_horizontal">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="top"
            android:layout_column="2">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnCarisaurio"
                android:layout_gravity="center_horizontal|top"
                android:src="@drawable/carisaurio"
                android:onClick="playSound" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnHuron"
                android:layout_gravity="right|top"
                android:src="@drawable/huron"
                android:onClick="playSound" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnPinchiGato"
                android:layout_gravity="center"
                android:src="@drawable/pinchigato"
                android:onClick="playSound" />

        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentEnd="false"
        android:gravity="center_horizontal">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnGato"
                android:layout_gravity="left|top"
                android:src="@drawable/gato"
                android:onClick="playSound" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnSantino"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/santino"
                android:onClick="playSound" />

        </TableRow>
    </LinearLayout>

</RelativeLayout>
