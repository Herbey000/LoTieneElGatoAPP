<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:focusableInTouchMode="true">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout1"
        android:gravity="center_vertical|center_horizontal">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="top"
            android:layout_column="2">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnCarisaurio"
                android:layout_gravity="center_horizontal|top"
                android:src="@drawable/carisaurio"
                android:onClick="playSound" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnHuron"
                android:layout_gravity="right|top"
                android:src="@drawable/huron"
                android:onClick="playSound" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnPinchiGato"
                android:layout_gravity="center"
                android:src="@drawable/pinchigato"
                android:onClick="playSound" />

        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnGato"
                android:layout_gravity="left|top"
                android:src="@drawable/gato"
                android:layout_below="@+id/linearLayout2"
                android:onClick="playSound" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnSantino"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/santino"
                android:layout_below="@+id/linearLayout2"
                android:onClick="playSound" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnMatracasi"
                android:onClick="playSound"
                android:clickable="false"
                android:src="@drawable/matraca"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </TableRow>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btnNachas"
            android:onClick="playSound"
            android:clickable="false"
            android:src="@drawable/guitarra"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnCosaSeria"
                android:onClick="playSound"
                android:clickable="false"
                android:src="@drawable/galatzia"
                android:layout_below="@+id/linearLayout3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/btnShare"
                android:onClick="playSound"
                android:clickable="false"
                android:src="@drawable/share"
                android:layout_below="@+id/linearLayout3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </TableRow>

    </LinearLayout>

</RelativeLayout>
